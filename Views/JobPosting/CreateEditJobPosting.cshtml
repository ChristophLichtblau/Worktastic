@model Worktastic.Models.JobPosting
@{
ViewData["Title"] = "Erstellen oder Bearbeiten";

}



<form asp-controller="JobPosting" asp-action="CreateEditJob" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <h5>Neues Inserat bearbeiten</h5>
        </div>

        <div class="card-body">
            <!-- Entferne die Klasse "form-group", und nutze stattdessen Bootstrap-Spalten direkt -->
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="JobTitle" type="text" placeholder="Bitte trage eine Jobbezeichnung ein" />
                </div>
                <div class="col">
                    <input class="form-control" asp-for="JobLocation" type="text" placeholder="Bitte trage einen Ort ein" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <textarea rows="6" class="form-control" asp-for="Description" placeholder="Bitte trage eine ausführliche Beschreibung ein"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6" >
                    <input class="form-control" asp-for="Salary" type="number" placeholder="Wieviel Jahresgehalt wird gezahlt:" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="col-form-label">
                        Wann startet der Job?
                    </div>
                    <input class="form-control" asp-for="StartDate" type="date" />
                </div>
            </div>
            
            <hr />
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="CompanyName" type="text" placeholder="Wie ist der Name deines Unternehmens: "/>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactWebsite" type="url" placeholder="Wie lautet die URL deiner Website: " />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <input class="form-control" asp-for="ContactPhone" type="tel" placeholder="Wie lautet deine Telefonnummer: "/>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="ContactMail" type="email" placeholder="Wie lautet deine Kontakt E-Mail-Adresse: "/>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label>Bild</label>
                    <input class="form-control" name="file" type="file" />
                </div>
            </div>

        </div>

        <div class="card-footer">
            <button class="btn btn-primary" type="submit">Speichern</button>
        </div>
    </div>
</form>
